<% include ../partials/header%>

<div class="container">
	<h1 style="text-align:center;">Add a new comment to <%=service.title %></h1>
	<div class="row">	
		
		<div style="width:40%; margin: 25px auto;">		
			<form action="/services/<%=service._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Submit!
					</button>
				</div>
			</form>
		
		<a href="/services">Go back</a>
		</div>
		
	</div>
</div>



